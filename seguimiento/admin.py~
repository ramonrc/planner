from django.contrib import admin
#from captura.models import *
from seguimiento.models import *

class EstrChoice(admin.TabularInline):
    model = com_est
    extra = 0

class ProbChoice(admin.TabularInline):
    model = com_pro
    extra = 0

class AcciChoice(admin.TabularInline):
    model = com_acc
    extra = 0

class Pro(admin.ModelAdmin):
    fieldsets = [
        (None, {'fields': ['problema']})]
    def save_model(self, request, obj, form, change):
        if not change:
            obj.problema.autor = request.user
        obj.save()


admin.site.register(problema)
admin.site.register(comentario)
admin.site.register(pro_est, Pro)
admin.site.register(com_est)
admin.site.register(pro_pro, Pro)
admin.site.register(com_pro)
admin.site.register(pro_acc, Pro)
admin.site.register(com_acc)
